@model MegaDesk_Core_Razor.Models.DeskQuote

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Quote ID:  @Html.DisplayFor(model => model.Id)</h4>
    <h4>Quote Date:  @Html.DisplayFor(model => model.QuoteDate)</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-5"></dt>
        <dt class="col-sm-7">
            Itemized Cost
        </dt>
        <dt class="col-sm-2">
            Name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FirstName) @Html.DisplayFor(model => model.LastName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Width)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Width) in
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Depth)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Depth) in
        </dd>
        <dt class="col-sm-2">
            Total Surface Area
        </dt>
        <dd class="col-sm-3">
            @Model.getSurfaceArea() in<sup>2</sup>
        </dd>
        <dd class="col-sm-7">
            @Model.getSurfaceAreaCost().ToString("C0")
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Drawers)
        </dt>
        <dd class="col-sm-3">
            @Html.DisplayFor(model => model.Drawers)
        </dd>
        <dd class="col-sm-7">
            @Model.getDrawersCost(Model.Drawers).ToString("C0")
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Material)
        </dt>
        <dd class="col-sm-3">
            @Html.DisplayFor(model => model.Material)
        </dd>
        <dd class="col-sm-7">
            @Model.getMaterialCost(Model.Material).ToString("C0")
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ShipOption)
        </dt>
        <dd class="col-sm-3">
            @Html.DisplayFor(model => model.ShipOption)
        </dd>
        <dd class="col-sm-7">
            @Model.getShippingCharge(Model.ShipOption).ToString("C0")
        </dd>
        <dt class="col-sm-5">
            Base Cost
        </dt>
        <dd class="col-sm-7">
            @Model.getBaseCost().ToString("C0")
        </dd>
        <dt class="col-sm-12"><hr /></dt>
        <dt class="col-sm-5 lead font-weight-bolder">
            Total Cost
        </dt>
        <dd class="col-sm-7">
            @Model.getQuotePrice().ToString("C0")
        </dd>
    </dl>
</div>
<div>
    <a class="btn btn-outline-primary btn-sm" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
    <a class="btn btn-outline-warning btn-sm" asp-action="Index">Back to List</a>
</div>
