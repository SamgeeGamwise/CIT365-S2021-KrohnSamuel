@page "{searchString?}"
@model MyScriptureJournal.Pages.JournalEntries.IndexModel
@{
    ViewData["Title"] = "Index";

}


<h1>View All</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<form>
    <p>
        <div class="d-block d-md-inline-block">
            Book: <input type="text" asp-for="BookSearch" />
            <input type="submit" value="Filter" class="mr-3" />
        </div>
        <div class="d-block d-md-inline-block">
            Notes: <input type="text" asp-for="NoteSearch" />
            <input type="submit" value="Filter" />
        </div>
    </p>
</form>
<table class="table index-table">
    <thead>
        <tr>
            <th>
                <span class="d-flex flex-row align-items-center">
                    @Html.DisplayNameFor(model => model.JournalEntry[0].Book)
                    <span class="sortWrap">
                        <form>
                            <input type="submit" value="^" class="sorter" />
                            <input type="hidden" asp-for="SortOrder" value="book_asc" />
                        </form>
                        <form>
                            <input type="submit" value="^" class="sorter flip" />
                            <input type="hidden" asp-for="SortOrder" value="book_desc" />
                        </form>
                    </span>
                </span>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.JournalEntry[0].Note)
            </th>
            <th>
                <span class="d-flex flex-row align-items-end">
                    @Html.DisplayNameFor(model => model.JournalEntry[0].DateAdded)
                    <span class="sortWrap">
                        <form>
                            <input type="submit" value="^" class="sorter" />
                            <input type="hidden" asp-for="SortOrder" value="date_asc" />
                        </form>
                        <form>
                            <input type="submit" value="^" class="sorter flip" />
                            <input type="hidden" asp-for="SortOrder" value="date_desc" />
                        </form>
                    </span>
                </span>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.JournalEntry)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Book)
                </td>
                <td class="ellipsis">
                    @Html.DisplayFor(modelItem => item.Note)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateAdded)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
